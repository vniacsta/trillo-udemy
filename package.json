{
  "name": "trillo",
  "version": "1.0.0",
  "description": "Reservations platform - practice course with Udemy",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass src/sass/main.scss src/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass src/sass/main.scss src/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' src/style.comp.css -o src/style.prefix.css",
    "compress:css": "node-sass src/style.prefix.css src/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "author": "Jonas",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "concat": "^1.0.3",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1"
  }
}
